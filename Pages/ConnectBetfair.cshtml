@page
@model BetfairReplicator.Pages.ConnectBetfairModel
@{
    ViewData["Title"] = "Collega Betfair";
}

<h1>Collega Betfair</h1>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<!-- ===== MOBILE: card layout ===== -->
<div class="d-md-none">
    <div class="row g-2">
        @foreach (var row in Model.Rows)
        {
            <div class="col-12 col-sm-6">
                <div class="card bf-mobile-card">
                    <div class="card-body bf-card-body">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="fw-bold">@row.DisplayName</div>
                            @if (row.IsConnected)
                            {
                                <span class="badge bg-success">Collegato</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Non collegato</span>
                            }
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <form method="get" asp-page="/BetfairLogin" class="flex-fill">
                                <input type="hidden" name="displayName" value="@row.DisplayName" />
                                <button type="submit" class="btn btn-primary w-100">
                                    @(row.IsConnected ? "Ricollega" : "Collega")
                                </button>
                            </form>

                            @if (row.IsConnected)
                            {
                                <form method="post" asp-page-handler="Disconnect" class="flex-fill">
                                    <input type="hidden" name="displayName" value="@row.DisplayName" />
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        Scollega
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- ===== DESKTOP/TABLET: tabella classica ===== -->
<div class="d-none d-md-block">
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Account</th>
                <th>Stato</th>
                <th class="text-end">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Rows)
            {
                <tr>
                    <td class="fw-semibold">@row.DisplayName</td>
                    <td>
                        @if (row.IsConnected)
                        {
                            <span class="badge bg-success">Collegato</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Non collegato</span>
                        }
                    </td>
                    <td class="text-end">
                        <div class="d-inline-flex gap-2">
                            <form method="get" asp-page="/BetfairLogin">
                                <input type="hidden" name="displayName" value="@row.DisplayName" />
                                <button type="submit" class="btn btn-primary">
                                    @(row.IsConnected ? "Ricollega" : "Collega")
                                </button>
                            </form>

                            @if (row.IsConnected)
                            {
                                <form method="post" asp-page-handler="Disconnect">
                                    <input type="hidden" name="displayName" value="@row.DisplayName" />
                                    <button type="submit" class="btn btn-outline-danger">Scollega</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
