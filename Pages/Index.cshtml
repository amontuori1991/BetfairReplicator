@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="ns-page">
    <div class="ns-header-card">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <img src="~/brand/favicon-96x96.png" alt="Logo" style="width:34px;height:34px;border-radius:10px;" />
                <div>
                    <h1 class="ns-title h4 mb-1">BetfairReplicator</h1>
                    <div class="ns-subtitle">Pannello rapido</div>
                </div>
            </div>

            @if (User?.Identity?.IsAuthenticated == true)
            {
                <form method="post" asp-page="/Admin/Logout" class="m-0">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                </form>
            }
        </div>
    </div>

    <div class="ns-grid">

        <a class="ns-tile" asp-page="/ConnectBetfair" data-loading="Carico collega e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- lock (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M17 8h-1V6a4 4 0 0 0-8 0v2H7a2 2 0 0 0-2 2v9a3 3 0 0 0 3 3h8a3 3 0 0 0 3-3v-9a2 2 0 0 0-2-2ZM10 6a2 2 0 0 1 4 0v2h-4V6Zm3 12.73V20h-2v-1.27a2 2 0 1 1 2 0Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Collega</div>
            <div class="ns-tile-sub">Betfair</div>
        </a>

        <a class="ns-tile" asp-page="/Funds" data-loading="Carico fondi e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- wallet (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M19 7H6.5a2.5 2.5 0 0 1 0-5H19a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1Zm1 3v9a3 3 0 0 1-3 3H7a4 4 0 0 1-4-4V6.5c0 .69.28 1.32.73 1.77S5.81 9 6.5 9H19a1 1 0 0 1 1 1Zm-4 4h-2a2 2 0 0 0 0 4h2a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Saldo</div>
            <div class="ns-tile-sub">Fondi</div>
        </a>

        <a class="ns-tile" asp-page="/MarketSearch" data-loading="Carico mercati e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- search (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M10 2a8 8 0 1 1 5.29 14.01l4.35 4.35a1 1 0 0 1-1.42 1.42l-4.35-4.35A8 8 0 0 1 10 2Zm0 2a6 6 0 1 0 0 12a6 6 0 0 0 0-12Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Mercati</div>
            <div class="ns-tile-sub">Quote & runner</div>
        </a>

        <!-- ✅ NUOVA TILE: STATISTICHE -->
        <a class="ns-tile" asp-page="/Statistics" data-loading="Carico statistiche e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- chart (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M4 21a1 1 0 0 1-1-1V4a1 1 0 0 1 2 0v15h16a1 1 0 0 1 0 2H4Zm4-4a1 1 0 0 1-1-1V11a1 1 0 0 1 2 0v5a1 1 0 0 1-1 1Zm5 0a1 1 0 0 1-1-1V7a1 1 0 0 1 2 0v9a1 1 0 0 1-1 1Zm5 0a1 1 0 0 1-1-1V9a1 1 0 0 1 2 0v7a1 1 0 0 1-1 1Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Statistiche</div>
            <div class="ns-tile-sub">P/L & ROI mensile</div>
        </a>
        <a class="ns-tile" asp-page="/Orders" data-loading="Carico ordini e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- receipt / list (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M7 2a2 2 0 0 0-2 2v16.5a.5.5 0 0 0 .8.4L8 19l2.2 1.9a1 1 0 0 0 1.3 0L14 19l2.2 1.9a.5.5 0 0 0 .8-.4V4a2 2 0 0 0-2-2H7Zm2 6h8v2H9V8Zm0 4h8v2H9v-2Zm0 4h6v2H9v-2Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Ordini</div>
            <div class="ns-tile-sub">Open &amp; Settled</div>
        </a>

        <a class="ns-tile" asp-page="/Admin/Accounts" data-loading="Carico accounts e runner…">
            <div class="ns-tile-icon" aria-hidden="true">
                <!-- users (filled) -->
                <svg viewBox="0 0 24 24">
                    <path fill="currentColor" d="M16 11c1.66 0 3-1.79 3-4s-1.34-4-3-4-3 1.79-3 4 1.34 4 3 4Zm-8 0c1.66 0 3-1.79 3-4S9.66 3 8 3 5 4.79 5 7s1.34 4 3 4Zm0 2c-2.67 0-8 1.34-8 4v2h10v-2c0-1.07.39-2.06 1.07-2.89C10.14 13.45 8.89 13 8 13Zm8 0c-.29 0-.62.02-.97.05C16.19 13.96 17 15.38 17 17v2h7v-2c0-2.66-5.33-4-8-4Z" />
                </svg>
            </div>
            <div class="ns-tile-title">Accounts</div>
            <div class="ns-tile-sub">Gestione utenti</div>
        </a>

    </div>
</div>
