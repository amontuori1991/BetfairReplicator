<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BetfairReplicator</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BetfairReplicator.styles.css" asp-append-version="true" />

    <link rel="icon" type="image/svg+xml" href="~/brand/favicon.svg" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="96x96" href="~/brand/favicon-96x96.png" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/brand/favicon.ico" asp-append-version="true" />

    <link rel="apple-touch-icon" href="~/brand/apple-touch-icon.png" asp-append-version="true" />
    <link rel="manifest" href="~/brand/site.webmanifest" asp-append-version="true" />
    <meta name="theme-color" content="#07101f" />
</head>
<body>
    <header>
        <!-- ✅ Navbar coerente col tema dark -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index" data-loading="Torno alla Home…">
                    <img src="~/brand/favicon-96x96.png" alt="Logo" style="width:26px;height:26px;border-radius:8px;" />
                    <span>BetfairReplicator</span>
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" data-loading="Apro la Home…">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/ConnectBetfair" data-loading="Apro collegamento Betfair…">Collega</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Funds" data-loading="Recupero fondi e saldo…">Fondi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/MarketSearch" data-loading="Carico mercati e runner…">Mercati</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Statistics" data-loading="Apro statistiche…">Statistiche</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Orders" data-loading="Apro ordini…">Ordini</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Admin/Accounts" data-loading="Apro gestione accounts…">Accounts</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <form method="post" asp-page="/Admin/Logout" class="m-0">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BetfairReplicator - <a asp-area="" asp-page="/Privacy" data-loading="Apro privacy…">Privacy</a>
        </div>
    </footer>

    <!-- ✅ Global Page Loader (meglio qui, prima degli script) -->
    <div id="bf-loader" class="bf-loader" aria-hidden="true">
        <div class="bf-loader-card">
            <div class="bf-loader-spinner" aria-hidden="true"></div>
            <div class="bf-loader-title">Caricamento…</div>
            <div class="bf-loader-sub">Sto aprendo la sezione</div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
