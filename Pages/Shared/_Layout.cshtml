<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BetfairReplicator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BetfairReplicator.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/brand/favicon.svg" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="96x96" href="~/brand/favicon-96x96.png" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/brand/favicon.ico" asp-append-version="true" />

    <link rel="apple-touch-icon" href="~/brand/apple-touch-icon.png" asp-append-version="true" />
    <link rel="manifest" href="~/brand/site.webmanifest" asp-append-version="true" />
    <meta name="theme-color" content="#07101f" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-page="/Index">
                    <img src="~/brand/favicon-96x96.png" alt="Logo" style="width:26px;height:26px;border-radius:8px;" />
                    <span>BetfairReplicator</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/ConnectBetfair">Collega</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Funds">Fondi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/MarketSearch">Mercati</a>
                        </li>

                        <!-- ✅ NUOVO LINK: STATISTICHE -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Statistics">Statistiche</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Admin/Accounts">Accounts</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <form method="post" asp-page="/Admin/Logout" class="m-0">
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BetfairReplicator - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
