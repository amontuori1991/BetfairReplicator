                @if (!string.IsNullOrWhiteSpace(r.JsonRpcPreview))
                {
                    <tr>
                        <td colspan="8">
                            <details>
                                <summary>JSON-RPC preview (@r.DisplayName)</summary>
                                <pre class="mt-2">@r.JsonRpcPreview</pre>
                            </details>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}

