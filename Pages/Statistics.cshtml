@page
@model BetfairReplicator.Pages.StatisticsModel
@{
    ViewData["Title"] = "Statistiche";
}

<div class="ns-page">
    <div class="ns-header-card">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h1 class="ns-title h4 mb-1">Statistiche</h1>
                <div class="ns-subtitle">
                    Storico P/L e ROI mensile (Betfair)
                    @if (!string.IsNullOrWhiteSpace(Model.MasterDisplayName))
                    {
                        <span class="text-muted">— master: <strong>@Model.MasterDisplayName</strong></span>
                    }
                </div>
            </div>

            <a class="btn btn-outline-secondary btn-sm" asp-page="/Index">Torna alla Home</a>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
    else
    {
        <div class="row g-3">
            <div class="col-12 col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Profitto mese</div>
                        <div class="fs-4 fw-semibold">
                            @(Model.CurrentMonthProfit.HasValue ? Model.CurrentMonthProfit.Value.ToString("0.00") : "—")
                        </div>
                        <div class="text-muted small mt-1">Da ordini settled (listClearedOrders)</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">ROI % mese</div>
                        <div class="fs-4 fw-semibold">
                            @(Model.CurrentMonthRoiPct.HasValue ? Model.CurrentMonthRoiPct.Value.ToString("0.00") + "%" : "—")
                        </div>
                        <div class="text-muted small mt-1">Profitto / stake</div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Numero scommesse</div>
                        <div class="fs-4 fw-semibold">@Model.CurrentMonthBets</div>
                        <div class="text-muted small mt-1">Ordini settled</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm mt-3">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <div>
                        <div class="fw-semibold">Andamento mensile</div>
                        <div class="text-muted small">Ultimi 12 mesi</div>
                    </div>
                </div>
@if (Model.MonthlyRows != null && Model.MonthlyRows.Count > 0)
{
    var chartRowsJson = System.Text.Json.JsonSerializer.Serialize(
        Model.MonthlyRows.Select(r => new { label = r.MonthLabel, profit = r.Profit, roi = r.RoiPct })
    );

    <div class="mt-2 mb-3">
        <canvas id="monthlyPnlChart" height="110" data-rows='@chartRowsJson'></canvas>
    </div>
}


                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Mese</th>
                                <th class="text-end">Profitto</th>
                                <th class="text-end">Stake</th>
                                <th class="text-end">ROI %</th>
                                <th class="text-end">Bets</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MonthlyRows == null || Model.MonthlyRows.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-muted">Nessun dato disponibile nel periodo selezionato.</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var r in Model.MonthlyRows)
                                {
                                    <tr>
                                        <td>@r.MonthLabel</td>
                                        <td class="text-end">@r.Profit.ToString("0.00")</td>
                                        <td class="text-end">@r.Stake.ToString("0.00")</td>
                                        <td class="text-end">@r.RoiPct.ToString("0.00")%</td>
                                        <td class="text-end">@r.Bets</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <div class="alert alert-secondary mt-3 mb-0">
                    Step successivo: grafico mese-per-mese + pagina “Ordini” unificata (master).
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        (function () {
const el = document.getElementById('monthlyPnlChart');
if (!el) return;

const raw = el.getAttribute('data-rows');
if (!raw) return;

let rows;
try { rows = JSON.parse(raw); } catch { return; }


            if (!rows || rows.length === 0) return;

            const labels = rows.map(x => x.label);
            const profits = rows.map(x => x.profit);
            const rois = rows.map(x => x.roi);

            

            new Chart(el, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Profitto',
                            data: profits,
                            yAxisID: 'yProfit'
                        },
                        {
                            label: 'ROI %',
                            data: rois,
                            type: 'line',
                            yAxisID: 'yRoi',
                            tension: 0.25,
                            pointRadius: 2
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: { mode: 'index', intersect: false },
                    plugins: {
                        legend: { display: true }
                    },
                    scales: {
                        yProfit: {
                            position: 'left',
                            title: { display: true, text: 'Profitto' }
                        },
                        yRoi: {
                            position: 'right',
                            title: { display: true, text: 'ROI %' },
                            grid: { drawOnChartArea: false }
                        }
                    }
                }
            });
        })();
    </script>
}
