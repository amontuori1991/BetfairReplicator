@page
@model BetfairReplicator.Pages.BetfairLoginModel
@{
    ViewData["Title"] = "Login Betfair";
}

<h1>Login Betfair</h1>

<p><b>Account:</b> @Model.DisplayName</p>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post">
    <input type="hidden" name="displayName" value="@Model.DisplayName" />

    <div class="mb-3">
        <label class="form-label">Username Betfair</label>
        <input class="form-control" name="username" autocomplete="username" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Password Betfair</label>
        <input class="form-control" name="password" type="password" autocomplete="current-password" required />
        <div class="form-text">
            Se hai 2FA “strong auth”, Betfair richiede il codice: in quel caso te lo faccio gestire nel prossimo step.
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Collega</button>
    <a class="btn btn-secondary" asp-page="/ConnectBetfair">Annulla</a>
</form>
